{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": 0,
    "require-yield": 0,
    "camelcase": 1,
    "comma-dangle": 2,
    "quotes": 0,
    "no-constant-condition": ["error", {
      "checkLoops": false
    }]
  }
}
